
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutDangky.cshtml";
}

<table align="center">

    <h2 style="text-align: center">Đăng Ký Thành Viên</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ Tên khách Hàng: </td>
            <td>
                @Html.TextBox("HoTenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên Đăng Nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật Khẩu: </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Nhập Lại Mật Khẩu: </td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện Thoại: </td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa Chỉ: </td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>
                <input type="email" required name="Email" />
                @ViewData["Loi7"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Ngày Sinh:</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tuổi</td>
            <td>
                <input type="number" max="100" min="18" name="Tuoi" />
            </td>
        </tr>
        <tr style="height:70px">
            <td></td>
            <td>
                <input type="submit" name="Đăng Ký" />
            </td>
        </tr>
        <tr style="color: dodgerblue; font-size: 25px">
            <td>Mún Đăng nhập ???==></td>
            <td>

                <a href="@Url.Action("Dangnhap","User")">Đăng Nhập</a>
            </td>
        </tr>
    }
</table>
