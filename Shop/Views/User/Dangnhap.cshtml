
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutDangky.cshtml";
}

<h4 style="color:red;text-align:center">@ViewBag.ThongBao</h4>
<table align="center">
    <h3 style="text-align:center">Đăng Nhập</h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên Đăng Nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật Khẩu: </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" name="Đăng Ký" />
            </td>
        </tr>
        <tr style="color:dodgerblue;font-size:25px">
            <td>Đăng ký Ngay==></td>
            <td>

                <a href="@Url.Action("Dangky","User") ">Đăng Ký Nào</a>
            </td>
        </tr>

    }
    <tr>
        <td>
            <input type="button" id="btnFacebookLogin"
                   value="Login with Facebook" class="btn btn-success" />
        </td>
    </tr>
</table>
<script src="~/Scripts/GoogleAuthentication.js"></script>
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        getAccessToken();
        $('#btnFacebookLogin').click(function () {
            window.location.href = "/api/Account/ExternalLogin?provider=Facebook&response_type=token&client_id=self&redirect_uri=http%3a%2f%2flocalhost%3a61358%2fLogin.html&state=GerGr5JlYx4t_KpsK57GFSxVueteyBunu02xJTak5m01";

        });
    }
    )


</script>