@{
        Layout = null;
    }

    <!DOCTYPE html>

    <html lang="en">
    <head>
        <title>Login </title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="~/Content/style2.css" rel="stylesheet" />


    </head>
    <body>
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                        <h2 class="heading-section">Login Shop No Name</h2>
                        <h4 style="color:red; text-align:center"> @ViewBag.Thongbao</h4>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-10">
                        <div class="wrap d-md-flex">
                            <div class="img" style="background-image: url('../../Content/img/bg-1.jpg');">
                            </div>
                            <div class="login-wrap p-4 p-md-5">
                                <div class="d-flex">
                                    <div class="w-100">

                                        <h3 class="mb-4">Sign In</h3>
                                    </div>
                                    <div class="w-100">
                                        <p class="social-media d-flex justify-content-end">
                                            <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                            <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                        </p>
                                    </div>
                                </div>
                                <div class="form-bottom">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.ValidationSummary(true)
                                        <div class="form-group">
                                            <label class="sr-only" for="form-username">Username:</label>
                                            <input type="text" name="username" placeholder="Username..." class="form-username form-control" id="form-username">
                                            @ViewData["Loi1"]
                                        </div>
                                        <div class="form-group">
                                            <label class="sr-only" for="form-password">Password:</label>
                                            <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password">
                                            @ViewData["Loi2"]
                                        </div>
                                        <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng Nhập</button>
                                    }
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label class="checkbox-wrap checkbox-primary mb-0">
                                            Remember Me
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/popper.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/main.js"></script>

    </body>
    </html>


