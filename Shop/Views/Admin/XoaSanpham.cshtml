@model Shop.Models.SANPHAM

@{
    ViewBag.Title = "XoaSanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XoaSanpham</h2>

<h3>Bạn Chắc Chắn Muốn Xóa Sản Phẩm Này??</h3>
<div>
     <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên sách:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TENSP)
            </dd>
            <dt>
                Giá bán:
            </dt>
            <dd>
                @String.Format("{0:0,0}", Model.GIABAN) VNĐ
            </dd>
            <dt>
                Mô tả:
            </dt>
            <dd style="width:600px; text-align:justify">
                @Html.DisplayFor(model => model.MOTA)
            </dd>
            <dt>
                Ảnh bìa:
            </dt>
            <dd>
                <img src="@Url.Content("~/Content/img/"+  Model.ANHBIA)" width="120px" />
            </dd>
            <dt>
                Ngày cập nhất:
            </dt>
            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.NGAYCAPNHAT) VNĐ
            </dd>


            <dt>
                Số lượng tồn:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SOLUONGTON)
            </dd>
            <dt>
               Thương Hiệu:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LOAISANPHAM.TENLOAI)
            </dd>
            <dt>
                Nhà xuất bản:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NSX.TENNSX)
            </dd>
        </dl>
    </div>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("TRỞ VỀ", "Sanpham")
            </div>
        }
    </div>
