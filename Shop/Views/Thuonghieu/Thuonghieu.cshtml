
@using Shop.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Shop.Models.NSX>


@{
    ViewBag.Title = "Thuonghieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Thương hiệu Sản Phẩm</h2>


<p>
    @Html.ActionLink("THÊM MỚI", "Create")
</p>
<table class="table" border="1">
    <tr>
        <th style="width:200px">  Mã Nhà Sản Xuất </th>
        <th style="width:100px">  Tên Nhà Sản Xuất  </th>
        <th style="width:300px">  Địa Chỉ    </th>
        <th style="width:120px">  Điện Thoại  </th>
        <th style="width:200px">  </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MANSX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENNSX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIACHI)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DT)
            </td>
            
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MANSX }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MANSX }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MANSX })
            </td>
        </tr>
    }
</table>
@* Tao liên kết các trang  *@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">

    @Html.PagedListPager(Model, page => Url.Action("Thuonghieu", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
